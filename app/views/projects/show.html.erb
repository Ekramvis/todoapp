<h1><%= @project.title %></h1>

<h3>Overview</h3>
<%= @project.description %>

<br>
<h3>Tasks</h3>
<ul>
	<% @project.items.each do |item| %>
		<li>
			<%= link_to item.title, item_path(item)%> 
			<%= item.completed ? "Completed" : "" %>
		</li>
	<% end %>
</ul>

<br>
<%= link_to "Edit Project", edit_project_path(@project) %>
